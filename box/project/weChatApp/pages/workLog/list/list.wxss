  height: 1000px;
  /* background: black; */
  position: fixed;
  top: 0;
  left: 22rpx;
  z-index: 99;
}

.allDownText {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-right: 15rpx;
  margin-bottom: 20rpx;
  color: #888;
  font-size: 30rpx;
}

.release {
  font-size: 24rpx;
  color: #888;
  float: right;
  padding-right: 28rpx;
  padding-bottom: 16rpx;
}
.publisher{
  font-size: 24rpx;
  color: #888;
  float: left;
  padding-left: 20rpx;
  padding-bottom: 16rpx;
}

.list-content {
  padding: 0 20rpx;
  font-size: 26rpx;
  isplay: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #333;
}

.time {
  margin-left: 48rpx;
}

.list {
  width: 100%;
  margin-bottom: 174rpx;
  position: relative;
  height: 170rpx;
}

