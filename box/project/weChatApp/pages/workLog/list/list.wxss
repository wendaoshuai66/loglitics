.listHead {
  text-overflow: ellipsis;
  white-space: nowrap;
  position: relative;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  background: #1ba39c;
  text-align: center;
  color: white;
  overflow: hidden;
  border-radius: 10rpx 10rpx 0rpx 0rpx;
  font-size: 30rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.date {
  width: 100%;
  height: 60rpx;
  /* background:	#8B6914; */
  padding-left: 20rpx;
  font-size: 26rpx;
  line-height: 60rpx;
  box-sizing: border-box;
  color: #333;
  margin-top: 20rpx;
}

.listBottom {
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  border-top: 1px solid #e5e5e5;
  padding-top: 12rpx;
}

.inlineBox {
  display: inline;
  font-size: 25rpx;
  padding-bottom: 16rpx;
  color: #888;
}

.endTime {
  position: absolute;
  right: 60rpx;
  bottom: 0;
}

.startTime {
  float: left;
}
