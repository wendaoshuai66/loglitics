.day {
  font-size: 40rpx;
}

.round {
  width: 24rpx;
  height: 24rpx;
  border: 8rpx solid #79cdcd;
  position: absolute;
  left: 20rpx;
  z-index: 100;
  transform: translateX(-40%);
  border-radius: 50%;
  background: #f5f5f5;
  top: 24rpx;
}

.roundLine {
  position: absolute;
  width: 54rpx;
  height: 2px;
  background: #1ba39c;
  top: 44%;
  right: -58rpx;
}

.roundRight {
  position: absolute;
  top: 50%;
  right: 0;
  background: #1ba39c;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  transform: translate(35%, -50%);
}

.listRight {
  width: 86%;
  height: 320rpx;
  position: absolute;
  top: 10rpx;
  right: 25rpx;
  background: white;
  border-radius: 10rpx;
  box-shadow: 0rpx 0rpx 25rpx #ccc;
  border-top: none;
  overflow: hidden;
  /* border-left: none; *//* box-sizing: border-box; */
}

.content {
  position: relative;
}

