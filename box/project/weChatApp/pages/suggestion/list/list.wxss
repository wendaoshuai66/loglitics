page {
  background: #f5f5f5;
}
.reply{
  left: 0rpx; 
  font-size: 25rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
   -webkit-box-orient: vertical;
   margin-bottom:16rpx;

}
.replyTitle{
  color: #4BA634;
}
.headPicture {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 10rpx;
}
.content_body{
  margin-top: 100rpx;
}
.allDownText {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-right: 15rpx;
  margin-bottom: 20rpx;
  color: #888;
  font-size: 30rpx;
}

.item {
  width: 95%;
  margin: 28rpx auto;
  background: white;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
  box-shadow: 0px 0px 15rpx #ccc;
}

.title {
  text-align: left;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-bottom: 10rpx;
  border-left: 10rpx solid #1ba39c;
  padding-left: 20rpx;
  white-space: nowrap;
  font-size: 30rpx;
  color: #333;
  /* text-overflow: hidden; */
}

.content {
  font-size: 28rpx;
  color: #666;
  /* background: red; */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 8rpx;
}

.name {
  font-size: 28rpx;
  color: #999;
}

.inline-block {
  display: inline-block;
}

.content_bottom {
  border-top: 1px solid #e5e5e5;
  padding-top: 18rpx;
  color: #e5e5e5;
  font-size: 30rpx;
}

.date {
  float: right;
  font-size: 24rpx;
  margin-top: 4rpx;
  color: #999;
}
